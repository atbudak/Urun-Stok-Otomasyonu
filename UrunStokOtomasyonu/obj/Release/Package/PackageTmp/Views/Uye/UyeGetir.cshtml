@model UrunStokOtomasyonu.Models.EntityFramework.TBLUYE
@{
    ViewBag.Title = "Üyeler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mw-500 text-center bg-transparent">
    <h1 class="sketchy text-center">Ürün Görüntüle</h1>
</div>
<div class="col-lg-12">
    <div class="col-lg-3 pull-right float-right mt-5 mb-3">
        <a href="/Uye/UyeEkle" class="btn btn-success pull-right m-2" style="margin-bottom:15px">Yeni Üye Ekle</a>
        <a href="/Uye/UyeListesi" class="btn btn-info pull-right m-2" style="margin-bottom:15px">Üyeler</a>
    </div>
</div>

<div class="flex_container" style="max-width:1300px">
    @Html.HiddenFor(x => x.ID)
    <div class="flex_col_1">
        @Html.Label("Üye Adı")
        @Html.TextBoxFor(x => x.AD, new { @class = "form-control mt-1 mb-3", @readonly = "" })
    </div>
    <div class="flex_col_1">
        @Html.Label("Kullanıcı Adı")
        @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control mt-1 mb-3", @readonly = "" })
    </div>
    <div class="flex_col_1">
        @Html.Label("Üye Soyadı")
        @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control mt-1 mb-3", @readonly = "" })
    </div>
    <div class="flex_col_1">
        @Html.Label("Şifre")
        @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control mt-1 mb-3", @readonly = "", title = "Şifreyi görüntülemek için tıklayınız.", onclick = "return type='text'", Type = "password" })
    </div>
</div>

