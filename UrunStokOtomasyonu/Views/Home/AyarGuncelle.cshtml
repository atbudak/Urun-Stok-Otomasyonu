@model UrunStokOtomasyonu.Models.EntityFramework.TBLADMIN
@{
    ViewBag.Title = "AyarGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mw-500 text-center bg-transparent mt-5">
    <h1 class="sketchy text-center">Bilgi Güncelle</h1>
</div>

<form method="post">
    @Html.AntiForgeryToken()
    <div style="max-width:1200px;margin:50px auto">
        <div class="col-lg-12">
            <a href="/Home/AyarGoruntule" class="btn btn-secondary float-right mb-3">Profil Bilgisi Görüntüle</a>
        </div>
        <table class="table table-bordered table-hover table-responsive-lg">
            <tr>
                <td class="font-weight-bold">ID</td>
                <td>@Html.DisplayFor(x => x.ID)</td>
            </tr>

            <tr>
                <td class="font-weight-bold">Adı</td>
                <td>
                    @Html.TextBoxFor(x => x.AD, new { style = "border-color:transparent" })
                    @Html.ValidationMessageFor(x => x.AD, "", new { @style = "margin-left:15px;color:red;opacity:.7" })
                </td>
            </tr>
            <tr>
                <td class="font-weight-bold">Soyadı</td>
                <td>
                    @Html.TextBoxFor(x => x.SOYAD, new { style = "border-color:transparent" })
                    @Html.ValidationMessageFor(x => x.SOYAD, "", new { @style = "margin-left:15px;color:red;opacity:.7" })
                </td>
            </tr>
            <tr>
                <td class="font-weight-bold">Kullanıcı Adı</td>
                <td>
                    @Html.TextBoxFor(x => x.KULLANICIADI, new { style = "border-color:transparent" })
                    @Html.ValidationMessageFor(x => x.KULLANICIADI, "", new { @style = "margin-left:15px;color:red;opacity:.7" })
                </td>
            </tr>
            <tr>
                <td class="font-weight-bold">Şifre</td>
                <td>
                    @Html.TextBoxFor(x => x.SIFRE, new { Type = "password", style = "border-color:transparent" })
                    @Html.ValidationMessageFor(x => x.SIFRE, "", new { @style = "margin-left:15px;color:red;opacity:.7" })
                </td>
            </tr>
        </table>
        <div class="text-right">
            <button class="btn btn-info"> Bilgi Güncelle</button>
        </div>
    </div>

</form>